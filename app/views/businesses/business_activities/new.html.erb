<% Activity.all.each do |activity| %>
  <%= simple_form_for [@business, @business_activity], url: :business_business_activities do |f| %>
    <%= f.input :quantity %>
    <%= f.input :activity_id, input_html: { value: activity.id } %>
    <%= f.input :business_id, input_html: { value: @business.id } %>
    <%= f.submit %>
  <% end %>
<% end %>
<%= link_to "Proceed", new_business_permit_application_path(@business) %>
