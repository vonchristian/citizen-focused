<% @business.charges.each do |charge| %>
  <div class="row">
    <div class="col-md-7">
      <%= charge.name %>
    </div>
    <div class="col-md-4">
      <%= number_to_currency charge.amount %>
    </div>
  </div>
  <br />
<% end %>
  <hr>
  <div class="row">
    <div class="col-md-7">
      <b>TOTAL</b>
    </div>
    <div class="col-md-4">
      <%= number_to_currency @business.charges.sum(&:amount) %>
    </div>
  </div>
<%= link_to "Add Charges", new_business_additional_charge_path(@business) %>
<%= simple_form_for [@business, @assessment], url: :business_assessments do |f| %>
  <%= f.input :business_id, input_html: { value: @business.id } %>
  <%= f.input :date, input_html: { value: Date.today } %>
  <%= f.submit "Save Assessment", class: "btn btn-primary" %>
<% end %>
